// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Survey {
  id        String     @id @default(cuid())
  name      String
  schema    Json       @default("{}")
  questions Question[]
}

model Question {
  id          String       @id @default(cuid())
  text        String
  description String?
  answers     Answer[]
  survey      Survey?      @relation(fields: [surveyId], references: [id])
  surveyId    String?
  type        QuestionType @default(SHORT_TEXT)
  order       Int          @default(1)

  @@index([surveyId], name: "surveyId")
}

enum QuestionType {
  SHORT_TEXT
  LONG_TEXT
  MULTIPLE_CHOICE
  SINGLE_CHOICE
}

model Answer {
  id         String   @id @default(cuid())
  text       String
  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  @@index([questionId], name: "questionId")
}
